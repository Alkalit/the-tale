NameVirtualHost the-tale.org:80

<virtualhost the-tale.org:80>
  ServerName the-tale.org
  ServerAdmin admin@the-tale.org

  DocumentRoot /home/the-tale/
  Alias /static/ /home/the-tale/static/
  Alias /dcont/ /home/the-tale/dcont/

  ErrorLog /home/the-tale/logs/apache_errors.log
  CustomLog /home/the-tale/logs/apache_access.log combined

  ErrorDocument 503 /dcont/503.html
  RewriteEngine On
  RewriteCond %{REQUEST_URI} !^\/dcont\/503\.html$
  RewriteCond /home/the-tale/dcont/503.html -f
  RewriteCond %{REMOTE_ADDR} !^0\.0\.0\.0$
  RewriteRule .* - [R=503,L]

  <directory />
    Options FollowSymLinks
    AllowOverride None
  </directory>

  <directory /home/the-tale/static>
    Order allow,deny
    allow from all
  </directory>

  <directory /home/the-tale/dcont>
    Order allow,deny
    allow from all
  </directory>

  WSGIDaemonProcess the-tale.org user=the-tale group=the-tale processes=4 threads=1
  WSGIProcessGroup the-tale.org
  WSGIScriptAlias / /home/the-tale/conf/wsgi.py

  <Directory /home/the-tale/conf/>
    <Files wsgi.py>
      Order deny,allow
      Allow from all
    </Files>
  </Directory>

</virtualhost>